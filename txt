CREATE TABLE Title (
WORKER_REF_ID NUMBER,
WORKER_TITLE CHAR(25),
AFFECTED_FROM DATE,
FOREIGN KEY (WORKER_REF_ID)
REFERENCES Worker(WORKER_ID)
        ON DELETE CASCADE
);
