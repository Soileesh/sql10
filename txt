 select *from worker;
 select*from bonus;
 select*from title;
 
 select*from worker where mod(worker_id,2)=0;
 
 select*from (select w.*,rownum rn from worker w) where mod(rn,2)=0;

create table  workk as select*from
(
  select w.*,rownum from worker w) where mod(rownum,2)=0;
 select*from workk;
 
 select worker_id,first_name from worker
 intersect
 select(select w.*,rownum from worker w where mod(rownum,2)=0) from workk;

 select to_char(sysdate,'dd-mon-yy')tarix,to_char(sysdate,'hh24:mi:ss')saat from dual;
 select current_timestamp from dual;
 
 select*from worker order by rownum asc fetch first &10 rows only;
 select*from worker order by salary asc fetch next 5 rows only;
 
select salary,LISTAGG(first_name)
within group(order by salary) list from worker
group by salary having count(first_name)>1;

 
 

